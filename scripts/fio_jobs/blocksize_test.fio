; Block Size Test Job File
; This job file tests various block sizes for both read and write operations
; Usage: fio --output-format=json blocksize_test.fio

[global]
; Device configuration - will be overridden by command line
filename=${DEVICE:-/dev/nvme0n1}
direct=1
ioengine=libaio
group_reporting=1
time_based=1
runtime=${DURATION:-300}
ramp_time=${WARMUP:-60}

; Standard parameters
iodepth=32
numjobs=1
size=100%

; Latency percentiles
lat_percentiles=1
percentile_list=90:95:99:99.9:99.99

; Test 1: 512B Block Size - Read
[bs_512_read]
rw=read
bs=512
stonewall

; Test 2: 512B Block Size - Write
[bs_512_write]
rw=write
bs=512
stonewall

; Test 3: 1KB Block Size - Read
[bs_1k_read]
rw=read
bs=1k
stonewall

; Test 4: 1KB Block Size - Write
[bs_1k_write]
rw=write
bs=1k
stonewall

; Test 5: 4KB Block Size - Read
